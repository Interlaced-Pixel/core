            "command": "${workspaceFolder}/tools/run-clang-tidy.sh",
            "args": [
                "--checks",
                "modernize-*"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
