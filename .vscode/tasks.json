{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Restart clangd",
            "type": "shell",
            "command": "code",
            "args": [
                "--command",
                "clangd.restart"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "clang-tidy: Run All Checks",
            "type": "shell",
            "command": "${workspaceFolder}/tools/run-clang-tidy.sh",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "clang-tidy: Apply Fixes",
            "type": "shell",
            "command": "${workspaceFolder}/tools/run-clang-tidy.sh",
            "args": [
                "--fix"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "clang-tidy: Generate Report",
            "type": "shell",
            "command": "${workspaceFolder}/tools/run-clang-tidy.sh",
            "args": [
                "--format",
                "markdown",
                "-o",
                "${workspaceFolder}/build/clang-tidy-report.md"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "clang-tidy: Bugprone Only",
            "type": "shell",
            "command": "${workspaceFolder}/tools/run-clang-tidy.sh",
            "args": [
                "--checks",
